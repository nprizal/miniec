<h2>管理画面：イベント「<%= @event_post.title %>」の編集</h2>
<% if @event_post.errors.any? %>
<ul>
	<% @event_post.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<table>
	<%= form_for(@event_post, url:{controller:'event_posts', action:'edit'}) do |form| %>
	<tr><th>イベント名</th>
		<td><%= form.text_field :title %></td></tr>
	<tr><th>イベントの説明</th>
		<td><%= form.text_area :content, {cols:40, rows:10} %></td></tr>
	<tr><th>イベントの場所</th>
		<td><%= form.text_field :location %></td></tr>
	<tr><th>カテゴリID</th>
		<!-- <td><%= form.text_field :event_category_id %></td></tr> -->
		<td><%= collection_select(:event_post, :event_category_id, EventCategory.all, :id, :name, prompt: true) %></td></tr>
	<tr><th></th>
		<td><%= form.submit "送信" %></td></tr>
	<% end %>
</table>
<hr>
<p>※カテゴリの一覧</p>
<table>
	<tr>
		<th>Id</th><th >カテゴリ</th>
	</tr>
	<% @event_categories.each do |obj| %>
	<tr>
		<td><%= obj.id %></td>
		<td><%= obj.name %></td>
	</tr>
	<% end %>
</table>

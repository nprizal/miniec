<p>カテゴリの追加</p>
<% if @event_category.errors.any? %>
<ul>
    <% @event_category.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<% end %>

<table>
    <%= form_for(@event_category, url:{controller:'event_categories', action:'add'}) do |form| %>
        <tr><th>name</th><td><%= form.text_field :name %></td></tr>
        <tr><th>memo</th><td><%= form.text_field :memo %></td></tr>
        <tr><th></th><td><%= form.submit "送信" %></td></tr>
    <% end %>
</table>
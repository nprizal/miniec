<p>カテゴリの編集</p>
<% if @event_category.errors.any? %>
<ul>
    <% @event_category.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<% end %>

<table>
    <%= form_for(@event_category, url:{controller:'event_categories', action:'edit'}) do |form| %>
        <tr><th>カテゴリ名</th><td><%= form.text_field :name %></td></tr>
        <tr><th>備考</th><td><%= form.text_field :memo %></td></tr>
        <tr><th></th><td><%= form.submit "送信" %></td></tr>
    <% end %>
</table>
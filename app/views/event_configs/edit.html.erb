<p>サイトの設定編集</p>
<% if @event_category.errors.any? %>
<ul>
    <% @event_config.errors.full_messages.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<% end %>

<table>
    <%= form_for(@event_config, url: {controller: 'event_configs', action: 'edit'}) do |form| %>
    <tr>
        <th>タイトル</th>
        <td><%= form.text_field :title  %></td>
    </tr>
    <tr>
        <th>サブタイトル</th>
        <td><%= form.text_field :subtitle  %></td>
    </tr>
    <tr>
        <th>スタイル名<th>
        <td><%= form.text_field :stylename  %></td>
    </tr>
    <tr>
        <th>スタイル名<th>
        <td><%= form.submit "送信" %></td>
    </tr>
    <% end %>
</table>